<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gs.or.venator.schedapalestra"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="gs.or.venator.schedapalestra.SchedaPalestraApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="gs.or.venator.schedapalestra.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gs.or.venator.schedapalestra.OneRepMaxCalculationActivity"
            android:label="@string/calcolo_massimale"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="gs.or.venator.schedapalestra.PdfViewerActivity"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
    </application>

</manifest>