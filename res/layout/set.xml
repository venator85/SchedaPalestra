<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/gs.or.venator.schedapalestra"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <gs.or.venator.schedapalestra.view.RobotoButton
        android:id="@+id/txt_set_reps"
        style="@style/SmallButtonAppThemeWidgets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="8"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:min_width_ems="2"
        app:typeface="roboto_bold" />

    <gs.or.venator.schedapalestra.view.RobotoTextView
        android:id="@+id/txt_set_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="\@"
        app:typeface="roboto_light" />

    <gs.or.venator.schedapalestra.view.RobotoTextView
        android:id="@+id/txt_set_1rmpc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60%"
        android:textSize="17sp"
        app:typeface="roboto_regular" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/light_grey" />

    <gs.or.venator.schedapalestra.view.RobotoTextView
        android:id="@+id/txt_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60-90 s"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        app:typeface="roboto_light" />

    <View
        android:id="@+id/rest_right_line"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/light_grey" />

    <gs.or.venator.schedapalestra.view.RobotoTextView
        android:id="@+id/txt_set_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="46.5 Kg"
        android:textSize="17sp"
        app:typeface="roboto_bold" />

</LinearLayout>